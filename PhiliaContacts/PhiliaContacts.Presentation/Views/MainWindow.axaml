<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PhiliaContacts.Presentation.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:PhiliaContacts.Presentation.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
		MinWidth="830" MinHeight="325"
		Width="1000" Height="600"
        x:Class="PhiliaContacts.Presentation.Views.MainWindow"
		Icon="/Base/Assets/icon.ico"
		WindowStartupLocation="CenterScreen"
		x:Name="Win"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="Default"
		ExtendClientAreaTitleBarHeightHint="-1">

	<Grid x:Name="TitleBarAndContentGrid">

		<TextBlock Grid.Row="0"
				   Text="{Binding Title, ElementName=Win}"
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   FontSize="12"
				   FontWeight="Bold"
				   Foreground="{DynamicResource SystemBaseMediumColor}"
				   IsHitTestVisible="False" />

		<v:MainView Grid.Row="1" />

	</Grid>
</Window>
